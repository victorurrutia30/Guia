@page
@model Guia6.Pages.Autores.IndexModel
@{
    ViewData["Title"] = "Listado de Autores";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Listado de Autores</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Crear" class="btn btn-primary">
                <i class="bi bi-plus-square"></i>Crear Nuevo Autor
            </a>
        </div>
    </div>

    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead style="text-align:center">
            <tr>
                <th>Id Autor</th>
                <th>Nombre del Autor</th>
                <th>Nacionalidad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var autor in Model.listaAutores)
            {
                <tr>
                    <td>@autor.IdAutor</td>
                    <td>@autor.NombreAutor</td>
                    <td>@autor.Nacionalidad</td>
                    <td>
                        <a asp-page="Editar" asp-route-id="@autor.IdAutor" class="btn btn-success mx-2">
                            <i class="bi bi-pencil-square"></i>Editar
                        </a>
                        <a asp-page="Borrar" asp-route-id="@autor.IdAutor" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>Borrar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
